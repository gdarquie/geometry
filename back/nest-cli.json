{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/geometry-core/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/geometry-core/tsconfig.app.json",
    "assets": ["**/*.hbs"],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/geometry-core",
  "projects": {
    "geometry-core": {
      "type": "application",
      "root": "apps/geometry-core",
      "entryFile": "main",
      "sourceRoot": "apps/geometry-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/geometry-core/tsconfig.app.json",
        "assets": ["**/*.hbs"],
        "watchAssets": true
      }
    }
  }
}